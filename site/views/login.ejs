<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %> 
    <body style="background-color: #faf2eb;"> 
 
    <%- include('./partials/header') %> 

   
        <section class=form_login>
            <h5>Ingresar</h5>
            
            <% if (typeof errors != "undefined") { %>
						 
                <% errors.forEach(error => { %>     
                    <p><%= error.msg %> </p>
                <% }) 
                 } %>

                <form action="login" method="POST">
                        <input class="controls" type="email" name="email" id="email" placeholder="Usuario">
                        <input class="controls" type="password" name="password" id="password" placeholder="Contraseña">
                        <div >
                            <input type="checkbox" name="recordame" id="recordame" placeholder="Recordar">
                            <label for="recordame"> Recordar </label>
                        </div>
                        <input class="buttons" type="submit" name="ingreso" value="Iniciar sesion">
                        <p> <a href="/users/recup_pass">olvidaste tu contraseña?</a></p> 
           

        </section>

   




    <%- include('./partials/footer') %> 

</body>
</html>